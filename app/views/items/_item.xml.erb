<item>
  <name><%= item.name %></name>
  <type><%= item.item_type %></type>
  <detail></detail><%# TODO: maybe add this, this is not being used ANYWHERE %>
  <magic><%= item.magic %></magic>
  <value><%= item.value %></value>
  <rarity><%= item.rarity %></rarity>
  <weight><%= item.weight %></weight>
  <ac><%= item.ac %> </ac>
  <strength><%= item.strength %></strength>
  <stealth><%= item.stealth %></stealth>
  <dmg1><% item.dmg1 %></dmg1>
  <dmg2><% item.dmg2 %></dmg2>
  <dmgType><% item.dmgType %></dmgType>
  <property><% item.property %></property>
  <range><% item.range %></range>

  <%# Each actual line break makes a new text field %>
  <% item.text.each_line do |line| %>
    <text><%= line %></text>
  <% end %>
</item>