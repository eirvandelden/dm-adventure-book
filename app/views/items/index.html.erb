<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ItemType</th>
      <th>Weight</th>
      <th>Text</th>
      <th>Ac</th>
      <th>Strength</th>
      <th>Stealth</th>
      <th>Dmg1</th>
      <th>Dmg2</th>
      <th>Dmgtype</th>
      <th>Property</th>
      <th>Range</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.item_type %></td>
        <td><%= item.weight %></td>
        <td><%= item.text %></td>
        <td><%= item.ac %></td>
        <td><%= item.strength %></td>
        <td><%= item.stealth %></td>
        <td><%= item.dmg1 %></td>
        <td><%= item.dmg2 %></td>
        <td><%= item.dmgType %></td>
        <td><%= item.property %></td>
        <td><%= item.range %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

